	<script>
		function formSubmit(){
			localStorage.setItem("name", document.querySelector('#name').value);
			var val =document.getElementById('roomID').value;
			if(val == null || val == "") 
			{
				window.location.href ="create-new-room" 
			}else{
				window.location = val;
			}
		}
	</script>
