  <body class="bg-dark">
    <div class="container">
        <div class="card border-0" style="width: 39rem;">
            <div class="card-body bg-black-dark  rounded p-4">
              <h3 class="display-3 text-white">P2P video chat</h5>
              <p class="mt-3">
              </p>
              <div class="form-group">
                <label for="" class=" text-light text-justify">To experience the free, 
                      fast and secure video conferencing ,
                     please provide the invite code sent to you by the admin to join the room or just create your custom room.</label>
                <input type="text" id="ini-link" placeholder="panda1o25" 
                class="text-white mt-2 form-control form-control-lg" />
              </div>

             <div class=" text-center">
              <button id="join-room" onclick="makeACall()"  class="btn text-right btn-lg btn-outline-light">Join or create a room</button>
             </div>
              
            </div>
          </div>    </div>  
  </body>

  <script>
    const makeACall= () =>{
      var val =document.getElementById('ini-link').value;
      if(val == null || val == "") 
      {
        window.location.href ="create-new-room" 
      }else{
        window.location = val;
      }
    };

  </script>
